@using DSRemapper.Types;

<div class="touch-item">
    <span>@Name</span>
    <svg width="100px" height="60px">
        <rect x="0" y="0" width="100" height="60" rx="3" ry="3" fill="#282828"></rect>
        <circle cx="@svgxVal" cy="@svgyVal" r="3" fill="@(Value.Pressed?"#aaa":"#555")"></circle>
    </svg>
    <span>Id: @Value.Id</span>
    <span>@($"X: {@Value.Pos.X:0.00} Y: {@Value.Pos.X:0.00}")</span>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "Unamed";
    [Parameter]
    public DSTouch Value { get; set; } = null!;

    private int svgxVal => (int)Math.Round((Value.Pos.X) * 100, 0);
    private int svgyVal => (int)Math.Round((Value.Pos.Y) * 60, 0);
    
    //<circle cx="20" cy="10" r="3" fill="#666"></circle>
}