<div class="button-item">
    <span>@Name</span>
    <svg width="40px" height="20px">
        <rect x="0" y="0" width="40" height="20" rx="3" ry="3" fill="@(Value?"#aaa":"#282828")"></rect>
    </svg>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "Unamed";
    [Parameter]
    public bool Value { get; set; } = false;
}
